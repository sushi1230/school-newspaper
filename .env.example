# Google Sheets API Configuration
# Follow the setup guide in docs/GOOGLE_API_SETUP.md to obtain these values

# Google Sheets ID (the ID from the master articles spreadsheet URL)
VITE_GOOGLE_SHEETS_ID=your_sheets_id_here

# Google Drive Folder ID (the ID of the main articles folder in Google Drive)
VITE_GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Google API Key (public API key for read-only access)
VITE_GOOGLE_API_KEY=your_api_key_here

# Caching Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION_MS=3600000

# Google OAuth 2.0 Configuration
# Follow the setup guide in docs/GOOGLE_OAUTH_SETUP.md to obtain the Client ID
VITE_GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id_here

# School email domain (restrict sign-in to this domain)
VITE_ALLOWED_EMAIL_DOMAIN=pps.net

# Admin email address (automatically granted Admin role)
VITE_ADMIN_EMAIL=hkaplanminer@pps.net
